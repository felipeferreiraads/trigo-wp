header
    width: 100%
    height 100px
    background: white
    box-shadow: 0 2px 10px 0 rgba(0, 0, 0, 0.5)
    z-index: 9999
    position: absolute
    top: 0
    left: 0
    .container
        height 100%
    .grid
        display flex
        justify-content: space-between
        align-items: center
        height 100%
    .logo
        height: 95%
        img
            height 100%
    .menu
        flex-basis: 60%
        display flex
        justify-content: space-between
        a
            font-size: 16px
            color: $color.primary
            text-transform: uppercase
            font-weight: 600