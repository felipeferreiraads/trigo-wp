.section-home
    .grid
        min-height: 550px
        display: flex
        &.reverse
            flex-direction: row-reverse
    .image
        flex-basis: 40%
        overflow: hidden
        img
            width: 100%
            height: 100%
            object-fit: cover
            object-position: center
    .text-section
        flex: 1
        padding: 100px
        display: flex
        flex-direction: column
        justify-content: space-between
        align-items: center
        background: white
        &.gradient
            background-image: linear-gradient(296deg, #db6344, $color.primary)
            > *:not(.button)
                color white !important
        h2
            font-size: 35px
            color: $color.primary
            text-align: center
            margin-bottom: 80px
        p
            text-align: center
            margin-bottom: 80px
.button
    padding: 0 45px
    border-radius: 25px
    background: $color.primary
    line-height: 50px
    border: none 
    cursor pointer
    font-weight bold
    color white
    text-transform: uppercase
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.5)
    display: block
    text-align: center
    transition: .2s
    &:hover
        opacity: .8
    &.white
        background: white
        color: $color.primary !important