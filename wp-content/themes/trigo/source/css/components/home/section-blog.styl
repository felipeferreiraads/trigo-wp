.blog-home
    padding: 100px 0
    h2
        font-size: 35px
        color: $color.primary
        text-align: center
        margin-bottom: 80px
    .grid
        display flex
        > *:not(:last-child)
            margin-right: 70px
    .grid-internal
        display: flex
        flex-wrap: wrap
        justify-content: space-between
        > *
            max-width 30%
            &:nth-last-child(4n+0)
                margin-bottom: 50px
    .button
        margin: 100px auto 0
        max-width 200px
        padding: 0
    .filter
        display: flex
        flex-direction: column
        align-items: center
        margin-bottom: 70px
        p
            line-height: 1.8
            text-align: center
            margin-bottom: 30px
        form 
            width: 100%
            max-width 450px
            position relative
            input
                width: 100%
                height 50px
                background: #eee
                border: none
                border-radius: 5px
                padding: 0 50px 0 20px
            button
                padding: 0
                border: none 
                background: transparent
                cursor pointer
                position absolute
                top: 50%
                right: 10px
                transform: translateY(-50%)
.card-blog
    height 400px
    border-radius: 5px
    overflow hidden
    box-shadow: 0 2px 10px 0 rgba(162, 162, 162, 0.5)
    figure
        height: 180px
        img
            width: 100%
            height 100%
            object-fit: cover
            object-position: center
    .content
        padding: 30px
    h3
        font-size: 25px
        color: $color.primary
        text-align: center
        margin-bottom: 15px
    p
        text-align: center
        margin-bottom: 15px
    a
        text-align: center
        display block
        color: $color.primary
        font-weight: bold