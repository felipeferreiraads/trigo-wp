.contact
    position relative
    overflow hidden
    +below($bp.lg)
        top: -150px
    h2
        font-size: 35px
        color: $color.primary
        text-align: center
        margin-bottom: 100px
        +below($bp.lg)
            margin-bottom: 50px
    &::after
        width: 300%
        height 2000px
        content: ''
        background-image: linear-gradient(296deg, #db6344, $color.primary)
        position: absolute
        top: 220px
        left: 50%
        transform: translateX(-50%)
        border-radius: 50%
        z-index: 0
    form
        width: 100%
        max-width 500px
        margin: 0 auto
        display flex
        flex-wrap: wrap
        justify-content: space-between
        padding: 50px 25px
        background: white
        box-shadow: 0 2px 10px 0 rgba(162, 162, 162, 0.5)
        border-radius: 5px
        z-index: 1
        position relative
        > *:not(:last-child)
            margin-bottom: 25px
        input, textarea
            width: 100%
            height: 50px
            border: none
            background: $color.gray-light
            border-radius: 5px
            padding: 0 20px
            color: $color.gray-medium
            &.half
                width: 49%
            &::placeholder
                opacity: 1
        textarea
            height: 135px
            padding: 20px
            resize: none
        .submit
            width: 100%
            display: flex
            justify-content: center