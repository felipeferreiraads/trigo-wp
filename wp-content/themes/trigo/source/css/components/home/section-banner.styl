.banner
    width: 150%
    height 600px
    background: url(../img/banner.jpg) top center no-repeat
    background-size: cover
    border-radius: 0 0 30% 30%
    position relative
    top 0
    left 50%
    transform translateX(-50%)
    position relative
    overflow hidden
    display flex
    justify-content: center
    padding-bottom: 150px
    .overlay
        width: 100%
        height 100%
        background-image: linear-gradient(70deg, #000000, $color.primary)
        opacity: 0.4
        position: absolute
        top: 0
        left 0
        z-index 0
    .container
        width: 67%
        height 100%
        z-index: 1
    .grid
        height: 100%
        display flex
        flex-direction: column
        justify-content: center
    h1
        font-size: 40px
        color white
        margin-bottom: 50px
        +below($bp.lg)
            font-size: 28px
    p
        color white
        margin-bottom: 50px
        max-width 640px