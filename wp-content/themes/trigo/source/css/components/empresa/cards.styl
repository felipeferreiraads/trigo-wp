.cards-enterprise
    display flex
    justify-content space-between
    margin-top: 100px
    +above($bp.lg)
        > *:not(:last-child)
            margin-right: 90px
    +below($bp.lg)
        flex-wrap: wrap

.card-enterprise
    +below($bp.lg)
        width: 100%
        &:nth-child(n+2)
            margin-top: 30px
    figure
        display: flex
        justify-content: center
        margin-bottom: 30px
        img
            width: 100px
            height 100px
    h3
        font-size: 35px
        color: $color.primary
        text-align: center
        margin-bottom: 30px
    p
        line-height: 1.8
        text-align: center