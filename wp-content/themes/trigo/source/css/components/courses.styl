.course-lecture
    padding: 100px 0
    +below($bp.lg)
        padding: 50px 0
    .grid
        display flex
        flex-direction: column
        .text
            margin-left: 0
            &:not(:first-child)
                margin-top: 50px
            &:last-child
                margin-bottom: 100px
    h2
        font-size: 35px
        color: $color.primary
        margin-bottom: 20px
    .button
        margin: 0 auto
    .speaker
        display flex
        margin-top: 50px
        figure
            width: 230px
            height: 230px
            border-radius: 100%
            overflow hidden
            img
                width: 100%
                height: 100%
                object-fit: cover
                object-position: center
        .speaker-text
            flex-basis: 800px
            padding-left: 50px
            p
                line-height: 1.8